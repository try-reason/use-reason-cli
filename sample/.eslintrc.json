{
    "root": true,
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "eslint-plugin-reason"
    ],
    "rules": {
        "reason/reason-typed": "error",
        "reason/reason-actions": "error",
        "reason/agents": "error"
    }
}
